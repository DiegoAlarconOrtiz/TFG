---
import { Picture } from "astro:assets";
import heroImage from "./assets/Hero.svg";
import hero from "./assets/Hero.png";
import Link from "../components/ui/link.astro";
import shape from "./assets/Shape.png";
---

<section
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24"
>
  <div
    class="py-6 md:order-1 hidden md:block absolute max-w-[800px] -z-10 mt-48 right-1"
  >
    <Picture
      src={hero}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      class="w-full h-full"
    />
  </div>
  <div
    class="flex flex-col gap-5 justify-center items-center transition-opacity animate-fade-up"
  >
    <h1
      class="text-4xl text-center lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter"
    >
